<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="/socket.io/socket.io.js"></script>
  <title>Project WebChat</title>
</head>
<body>
  <h1>Inciando Projeto</h1>

  <input type="text" id="message" data-testid="message-box">
  <button id='sendMessage' data-testid="send-button">Enviar</button>

  <h3>Mensagens</h3>
  <ul id='messages'></ul>

  <h3>Usu√°rios</h3>
  <ul id='users'></ul>

  <h3>Log Status</h3>
  <ul id='logStatus'></ul>

  <script>
    // aqui define o canal do front com o back
    const socket = io('http://localhost:3000');

    socket.emit('newUser');

    document.querySelector('#sendMessage').addEventListener('click', (e) => {
      const chatMessage = document.querySelector('#message').value;
      const nickname = `Guest - ${socket.id}`;
      socket.emit('message', {chatMessage, nickname});
    })

    socket.on('message', (message) => {
      const messageLI = document.createElement('li');
      const dataTestId = document.createAttribute('data-testid');
      dataTestId.value = 'message';
      messageLI.setAttributeNode(dataTestId);
      messageLI.innerHTML = message;

      document.querySelector('#messages').appendChild(messageLI);
    });

    socket.on('updateUsers', (users) => {
      const usersList = document.querySelector('#users');
      usersList.innerHTML = '';
      users.forEach((user) => {
        const userLI = document.createElement('li');
        userLI.innerHTML = user.name;
        usersList.appendChild(userLI);
      })
    });

    socket.on('logStatus', (logStatus) => {
      const logStatusLI = document.createElement('li');
      logStatusLI.innerHTML = logStatus;
      document.querySelector('#logStatus').appendChild(logStatusLI);
    });

  </script>
</body>
</html>