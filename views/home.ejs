<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="/socket.io/socket.io.js"></script>
  <title>WebChat</title>
</head>
<body>
  <div>
    <div>
      <h1>WebChat</h1>
    </div>

    <div>
      <div>
        <div>
          <input
            type="text"
            data-testid="nickname-box"
            id="nickname-box"
            placeholder="Informe seu nickname"
          >
          <button
            type="button"
            data-testid="nickname-button"
            id="nickname-button"
          >
            Salvar
          </button>
        </div>
        <div>
          <h2>Usuários</h2>
          <ul id="online-users">
          </ul>
        </div>
      </div>
      <div>
        <h2>Mensagens</h2>
        <ul id="message"> 
        </ul> 
      </div>
    </div>
    <div>
      <input
        type="text"
        data-testid="message-box"
        id="message-box"
        placeholder="Digite sua mensagem aqui"
      >
      <button
        ype="button"
        data-testid="send-button"
        id="send-button"
      >
        Enviar
      </button>
    </div>
  </div>

  <script>
    const socket = io('http://localhost:3000');
    
    let nickname = '';
    
    // o ejs só acontece uma vez
    socket.on('updateUsers', (users) => {
      const listUsers = document.querySelector('#online-users');
      listUsers.innerHTML = '';
      users.forEach((user) => {
        if (user.socketId === socket.id) nickname = user.nickname;
        const userLi = document.createElement('li');
        userLi.setAttribute('data-testid', 'online-user');
        userLi.innerHTML = user.nickname;
        listUsers.appendChild(userLi);
      });
    });//inicia o usuario e forma a lista

    document.querySelector('#nickname-button').addEventListener('click', () => {
      const newNickname = document.querySelector('#nickname-box').value;
       nickname = newNickname;
       socket.emit('updateNickname', nickname);
    }); // mudar o nickname ?

    socket.on('message', (message) => {
      const msgLi = document.createElement('li');
      msgLi.setAttribute('data-testid', 'message');
      msgLi.innerHTML = message;
      document.querySelector('#message').appendChild(msgLi);
    })//  forma a lista das msgs 

    document.querySelector('#send-button').addEventListener('click', () => {
      const chatMessage = document.querySelector('#message-box').value;
      socket.emit('message', { chatMessage, nickname });
    }); // coleta a msg
  </script>
</body>
</html>
